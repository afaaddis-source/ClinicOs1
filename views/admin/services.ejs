<% layout('layout') %>

<!-- Language Toggle -->
<div class="position-fixed top-0 start-0 m-3" style="z-index: 1001;">
    <button class="btn btn-light btn-sm" onclick="toggleLanguage()">
        <i class="fas fa-globe me-1"></i>
        <span id="langText"><%= i18n.language === 'ar' ? 'EN' : 'عربي' %></span>
    </button>
</div>

<!-- Mobile Toggle -->
<button class="mobile-toggle" onclick="toggleSidebar()">
    <i class="fas fa-bars"></i>
</button>

<!-- Sidebar -->
<nav class="sidebar" id="sidebar">
    <div class="p-3">
        <div class="navbar-brand mb-4">
            <i class="fas fa-stethoscope me-2"></i>
            <span><%= t('app.name') %></span>
        </div>
        
        <!-- User Info -->
        <div class="text-center mb-4 p-3" style="background-color: rgba(255, 255, 255, 0.1); border-radius: 12px;">
            <div class="d-flex align-items-center">
                <div class="bg-white rounded-circle p-2 me-3">
                    <i class="fas fa-user-md text-primary"></i>
                </div>
                <div class="text-start">
                    <div class="fw-bold text-white"><%= user.username %></div>
                    <small class="text-white-50"><%= t('roles.' + user.role.toLowerCase()) %></small>
                </div>
            </div>
        </div>
        
        <!-- Navigation Menu -->
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="/dashboard">
                    <i class="fas fa-tachometer-alt me-2"></i>
                    <span><%= t('nav.dashboard') %></span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/patients">
                    <i class="fas fa-users me-2"></i>
                    <span><%= t('nav.patients') %></span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/appointments">
                    <i class="fas fa-calendar-alt me-2"></i>
                    <span><%= t('nav.appointments') %></span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/visits">
                    <i class="fas fa-notes-medical me-2"></i>
                    <span><%= t('nav.visits') %></span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/billing">
                    <i class="fas fa-file-invoice me-2"></i>
                    <span><%= t('nav.billing') %></span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/admin/services">
                    <i class="fas fa-cog me-2"></i>
                    <span><%= t('nav.services') %></span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/users">
                    <i class="fas fa-users-cog me-2"></i>
                    <span><%= t('nav.users') %></span>
                </a>
            </li>
            <li class="nav-item mt-3">
                <form action="/auth/logout" method="POST" class="d-inline">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="nav-link border-0 bg-transparent text-start w-100">
                        <i class="fas fa-sign-out-alt me-2"></i>
                        <span><%= t('nav.logout') %></span>
                    </button>
                </form>
            </li>
        </ul>
    </div>
</nav>

<!-- Main Content -->
<main class="main-content" id="mainContent">
    <!-- Header -->
    <div class="bg-white shadow-sm mb-4">
        <div class="container-fluid p-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h2 class="mb-0 fw-bold text-dark"><%= t('admin.services_title') %></h2>
                    <p class="text-muted mb-0"><%= t('admin.services_title') %></p>
                </div>
                <div class="col-md-6">
                    <div class="d-flex gap-2 justify-content-end">
                        <a href="/admin/services/new" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>
                            <%= t('admin.add_service') %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle me-2"></i>
                <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- Services Grid -->
        <div class="row">
            <% if (services.length === 0) { %>
                <div class="col-12">
                    <div class="text-center py-5">
                        <i class="fas fa-cog fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted"><%= t('admin.no_services_yet') %></h5>
                        <a href="/admin/services/new" class="btn btn-primary mt-3">
                            <i class="fas fa-plus me-1"></i>
                            <%= t('admin.add_service') %>
                        </a>
                    </div>
                </div>
            <% } else { %>
                <% services.forEach(service => { %>
                    <div class="col-lg-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h5 class="card-title mb-1">
                                            <i class="fas fa-cog me-2 text-primary"></i>
                                            <%= i18n.language === 'ar' ? service.nameAr : service.nameEn %>
                                        </h5>
                                        <small class="text-muted">
                                            <%= t('admin.service_code') %>: <%= service.code %>
                                        </small>
                                    </div>
                                    <div class="text-end">
                                        <span class="badge bg-success">
                                            <%= service.price.toFixed(2) %> <%= t('currency') %>
                                        </span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-6">
                                        <strong class="text-secondary"><%= t('admin.service_name_ar') %>:</strong>
                                        <div><%= service.nameAr %></div>
                                    </div>
                                    <div class="col-6">
                                        <strong class="text-secondary"><%= t('admin.service_name_en') %>:</strong>
                                        <div><%= service.nameEn %></div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <strong class="text-secondary"><%= t('admin.duration') %>:</strong>
                                    <span class="badge bg-info">
                                        <%= service.defaultMinutes %> <%= t('admin.minutes') %>
                                    </span>
                                </div>

                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn btn-outline-primary" onclick="editService('<%= service.id %>')">
                                            <i class="fas fa-edit me-1"></i>
                                            <%= t('actions.edit') %>
                                        </button>
                                        <button class="btn btn-outline-danger" 
                                                onclick="deleteService('<%= service.id %>', '<%= service.nameAr %>')">
                                            <i class="fas fa-trash me-1"></i>
                                            <%= t('actions.delete') %>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</main>

<!-- Edit Service Modal -->
<div class="modal fade" id="editServiceModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><%= t('admin.edit_service') %></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="editServiceForm">
                <div class="modal-body">
                    <input type="hidden" id="editServiceId">
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="editCode" class="form-label">
                                <%= t('admin.service_code') %> <span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control" id="editCode" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="editPrice" class="form-label">
                                <%= t('admin.price') %> <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <input type="number" class="form-control" id="editPrice" step="0.01" min="0" required>
                                <span class="input-group-text"><%= t('currency') %></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="editNameAr" class="form-label">
                                <%= t('admin.service_name_ar') %> <span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control" id="editNameAr" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="editNameEn" class="form-label">
                                <%= t('admin.service_name_en') %> <span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control" id="editNameEn" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="editDefaultMinutes" class="form-label">
                            <%= t('admin.duration') %> <span class="text-danger">*</span>
                        </label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="editDefaultMinutes" min="1" required>
                            <span class="input-group-text"><%= t('admin.minutes') %></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <%= t('actions.cancel') %>
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>
                        <%= t('actions.save') %>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function editService(serviceId) {
    // Find service data from the current page
    const services = <%- JSON.stringify(services) %>;
    const service = services.find(s => s.id === serviceId);
    
    if (service) {
        document.getElementById('editServiceId').value = service.id;
        document.getElementById('editCode').value = service.code;
        document.getElementById('editNameAr').value = service.nameAr;
        document.getElementById('editNameEn').value = service.nameEn;
        document.getElementById('editPrice').value = service.price;
        document.getElementById('editDefaultMinutes').value = service.defaultMinutes;
        
        new bootstrap.Modal(document.getElementById('editServiceModal')).show();
    }
}

function deleteService(serviceId, serviceName) {
    if (confirm('<%= t("admin.confirm_delete_service") %>'.replace('%s', serviceName))) {
        fetch(`/admin/services/${serviceId}`, {
            method: 'DELETE',
            headers: {
                'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
            }
        })
        .then(response => {
            if (response.ok) {
                location.reload();
            } else {
                alert('<%= t("error.delete_failed") %>');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('<%= t("error.network_error") %>');
        });
    }
}

document.getElementById('editServiceForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const serviceId = document.getElementById('editServiceId').value;
    const formData = {
        code: document.getElementById('editCode').value,
        nameAr: document.getElementById('editNameAr').value,
        nameEn: document.getElementById('editNameEn').value,
        price: parseFloat(document.getElementById('editPrice').value),
        defaultMinutes: parseInt(document.getElementById('editDefaultMinutes').value)
    };
    
    fetch(`/admin/services/${serviceId}?_method=PUT`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
        },
        body: JSON.stringify(formData)
    })
    .then(response => {
        if (response.ok) {
            location.reload();
        } else {
            alert('<%= t("error.save_failed") %>');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('<%= t("error.network_error") %>');
    });
});
</script>
