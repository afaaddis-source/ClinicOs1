<% layout('layout') %>

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light">
    <!-- Language Toggle -->
    <div class="position-absolute top-0 start-0 m-3">
        <button class="btn btn-outline-primary btn-sm" onclick="toggleLanguage()">
            <i class="fas fa-globe me-1"></i>
            <span id="langText"><%= i18n.language === 'ar' ? 'EN' : 'عربي' %></span>
        </button>
    </div>

    <div class="card shadow" style="width: 100%; max-width: 500px;">
        <div class="card-body p-5 text-center">
            <div class="mb-4">
                <% if (code === 404) { %>
                    <i class="fas fa-search fa-4x text-muted mb-3"></i>
                <% } else if (code === 403) { %>
                    <i class="fas fa-lock fa-4x text-warning mb-3"></i>
                <% } else { %>
                    <i class="fas fa-exclamation-triangle fa-4x text-danger mb-3"></i>
                <% } %>
            </div>

            <h1 class="display-4 fw-bold mb-3">
                <% if (code === 404) { %>
                    404
                <% } else if (code === 403) { %>
                    403
                <% } else { %>
                    <%= code || 500 %>
                <% } %>
            </h1>

            <h3 class="h4 mb-3 text-muted"><%= title %></h3>
            
            <p class="text-muted mb-4"><%= message %></p>

            <div class="d-flex gap-2 justify-content-center">
                <button class="btn btn-outline-secondary" onclick="history.back()">
                    <i class="fas fa-arrow-left me-1"></i>
                    <%= t('actions.go_back') %>
                </button>
                <a href="/dashboard" class="btn btn-primary">
                    <i class="fas fa-home me-1"></i>
                    <%= t('nav.dashboard') %>
                </a>
            </div>

            <div class="mt-4">
                <small class="text-muted">
                    <%= t('error.need_help') %> 
                    <a href="mailto:support@clinicos.com" class="text-decoration-none">
                        <%= t('error.contact_support') %>
                    </a>
                </small>
            </div>
        </div>
    </div>
</div>

<script>
function toggleLanguage() {
    const currentLang = document.documentElement.getAttribute('lang');
    const newLang = currentLang === 'ar' ? 'en' : 'ar';
    const url = new URL(window.location);
    url.searchParams.set('lng', newLang);
    window.location.href = url.toString();
}
</script>
