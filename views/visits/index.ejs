<% layout('layout') %>

<!-- Language Toggle -->
<div class="position-fixed top-0 start-0 m-3" style="z-index: 1001;">
    <button class="btn btn-light btn-sm" onclick="toggleLanguage()">
        <i class="fas fa-globe me-1"></i>
        <span id="langText"><%= i18n.language === 'ar' ? 'EN' : 'عربي' %></span>
    </button>
</div>

<!-- Mobile Toggle -->
<button class="mobile-toggle" onclick="toggleSidebar()">
    <i class="fas fa-bars"></i>
</button>

<!-- Sidebar -->
<nav class="sidebar" id="sidebar">
    <div class="p-3">
        <div class="navbar-brand mb-4">
            <i class="fas fa-stethoscope me-2"></i>
            <span><%= t('app.name') %></span>
        </div>
        
        <!-- User Info -->
        <div class="text-center mb-4 p-3" style="background-color: rgba(255, 255, 255, 0.1); border-radius: 12px;">
            <div class="d-flex align-items-center">
                <div class="bg-white rounded-circle p-2 me-3">
                    <i class="fas fa-user-md text-primary"></i>
                </div>
                <div class="text-start">
                    <div class="fw-bold text-white"><%= user.username %></div>
                    <small class="text-white-50"><%= t('roles.' + user.role.toLowerCase()) %></small>
                </div>
            </div>
        </div>
        
        <!-- Navigation Menu -->
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="/dashboard">
                    <i class="fas fa-tachometer-alt me-2"></i>
                    <span><%= t('nav.dashboard') %></span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/patients">
                    <i class="fas fa-users me-2"></i>
                    <span><%= t('nav.patients') %></span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/appointments">
                    <i class="fas fa-calendar-alt me-2"></i>
                    <span><%= t('nav.appointments') %></span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/visits">
                    <i class="fas fa-notes-medical me-2"></i>
                    <span><%= t('nav.visits') %></span>
                </a>
            </li>
            <% if (user.role === 'ACCOUNTANT' || user.role === 'ADMIN') { %>
            <li class="nav-item">
                <a class="nav-link" href="/billing">
                    <i class="fas fa-file-invoice me-2"></i>
                    <span><%= t('nav.billing') %></span>
                </a>
            </li>
            <% } %>
            <% if (user.role === 'ADMIN') { %>
            <li class="nav-item">
                <a class="nav-link" href="/admin/services">
                    <i class="fas fa-cog me-2"></i>
                    <span><%= t('nav.services') %></span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/users">
                    <i class="fas fa-users-cog me-2"></i>
                    <span><%= t('nav.users') %></span>
                </a>
            </li>
            <% } %>
            <li class="nav-item mt-3">
                <form action="/auth/logout" method="POST" class="d-inline">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="nav-link border-0 bg-transparent text-start w-100">
                        <i class="fas fa-sign-out-alt me-2"></i>
                        <span><%= t('nav.logout') %></span>
                    </button>
                </form>
            </li>
        </ul>
    </div>
</nav>

<!-- Main Content -->
<main class="main-content" id="mainContent">
    <!-- Header -->
    <div class="bg-white shadow-sm mb-4">
        <div class="container-fluid p-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h2 class="mb-0 fw-bold text-dark"><%= t('visits.title') %></h2>
                    <p class="text-muted mb-0"><%= t('visits.title') %></p>
                </div>
                <div class="col-md-6">
                    <div class="d-flex gap-2">
                        <% if (user.role === 'DOCTOR') { %>
                        <a href="/visits/new" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>
                            <%= t('visits.add_new') %>
                        </a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle me-2"></i>
                <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- Filters -->
        <div class="card mb-4">
            <div class="card-body">
                <form method="GET" action="/visits" class="row g-3">
                    <div class="col-md-4">
                        <label for="patient" class="form-label"><%= t('visits.patient') %></label>
                        <select class="form-select" id="patient" name="patient">
                            <option value="">-- <%= t('actions.all') %> --</option>
                            <% patients.forEach(patient => { %>
                                <option value="<%= patient.id %>" <%= filters.patient === patient.id ? 'selected' : '' %>>
                                    <%= patient.name %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="doctor" class="form-label"><%= t('visits.doctor') %></label>
                        <select class="form-select" id="doctor" name="doctor">
                            <option value="">-- <%= t('actions.all') %> --</option>
                            <% doctors.forEach(doctor => { %>
                                <option value="<%= doctor.id %>" <%= filters.doctor === doctor.id ? 'selected' : '' %>>
                                    <%= doctor.username %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-outline-primary me-2">
                            <i class="fas fa-filter me-1"></i>
                            <%= t('actions.filter') %>
                        </button>
                        <a href="/visits" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Visits List -->
        <div class="row">
            <% if (visits.length === 0) { %>
                <div class="col-12">
                    <div class="text-center py-5">
                        <i class="fas fa-notes-medical fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted"><%= t('visits.no_visits_yet') %></h5>
                        <% if (user.role === 'DOCTOR') { %>
                        <a href="/visits/new" class="btn btn-primary mt-3">
                            <i class="fas fa-plus me-1"></i>
                            <%= t('visits.add_new') %>
                        </a>
                        <% } %>
                    </div>
                </div>
            <% } else { %>
                <% visits.forEach(visit => { %>
                    <div class="col-lg-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h5 class="card-title mb-1">
                                            <i class="fas fa-user me-2 text-primary"></i>
                                            <%= visit.patient.name %>
                                        </h5>
                                        <small class="text-muted">
                                            <i class="fas fa-calendar me-1"></i>
                                            <%= new Date(visit.date).toLocaleDateString(i18n.language) %>
                                            <%= new Date(visit.date).toLocaleTimeString(i18n.language, {hour: '2-digit', minute: '2-digit'}) %>
                                        </small>
                                    </div>
                                    <div class="text-end">
                                        <small class="text-muted">
                                            <i class="fas fa-user-md me-1"></i>
                                            <%= visit.doctor.username %>
                                        </small>
                                    </div>
                                </div>

                                <% if (visit.diagnosis) { %>
                                    <div class="mb-2">
                                        <strong class="text-primary"><%= t('visits.diagnosis') %>:</strong>
                                        <p class="mb-1"><%= visit.diagnosis %></p>
                                    </div>
                                <% } %>

                                <% if (visit.notes) { %>
                                    <div class="mb-3">
                                        <strong class="text-secondary"><%= t('visits.notes') %>:</strong>
                                        <p class="mb-1 text-muted"><%= visit.notes %></p>
                                    </div>
                                <% } %>

                                <% if (visit.appointment) { %>
                                    <div class="mb-3">
                                        <span class="badge bg-info">
                                            <i class="fas fa-link me-1"></i>
                                            <%= t('visits.linked_appointment') %>
                                        </span>
                                    </div>
                                <% } %>

                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <a href="/visits/<%= visit.id %>" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye me-1"></i>
                                            <%= t('actions.view') %>
                                        </a>
                                        <% if (user.role === 'DOCTOR') { %>
                                        <a href="/visits/<%= visit.id %>/edit" class="btn btn-outline-secondary btn-sm">
                                            <i class="fas fa-edit me-1"></i>
                                            <%= t('actions.edit') %>
                                        </a>
                                        <% } %>
                                    </div>
                                    <small class="text-muted">
                                        <%= new Date(visit.createdAt).toLocaleDateString(i18n.language) %>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>

        <!-- Pagination -->
        <% if (pagination.total > 1) { %>
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <% if (pagination.hasPrev) { %>
                        <li class="page-item">
                            <a class="page-link" href="?page=<%= pagination.current - 1 %>&patient=<%= filters.patient || '' %>&doctor=<%= filters.doctor || '' %>">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>
                    <% } %>
                    
                    <% for (let i = Math.max(1, pagination.current - 2); i <= Math.min(pagination.total, pagination.current + 2); i++) { %>
                        <li class="page-item <%= i === pagination.current ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= i %>&patient=<%= filters.patient || '' %>&doctor=<%= filters.doctor || '' %>"><%= i %></a>
                        </li>
                    <% } %>
                    
                    <% if (pagination.hasNext) { %>
                        <li class="page-item">
                            <a class="page-link" href="?page=<%= pagination.current + 1 %>&patient=<%= filters.patient || '' %>&doctor=<%= filters.doctor || '' %>">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        <% } %>
    </div>
</main>
