<% layout('layout') %>

<!-- Language Toggle -->
<div class="position-fixed top-0 start-0 m-3" style="z-index: 1001;">
    <button class="btn btn-light btn-sm" onclick="toggleLanguage()">
        <i class="fas fa-globe me-1"></i>
        <span id="langText"><%= i18n.language === 'ar' ? 'EN' : 'عربي' %></span>
    </button>
</div>

<!-- Mobile Toggle -->
<button class="mobile-toggle" onclick="toggleSidebar()">
    <i class="fas fa-bars"></i>
</button>

<!-- Sidebar -->
<nav class="sidebar" id="sidebar">
    <div class="p-3">
        <div class="navbar-brand mb-4">
            <i class="fas fa-stethoscope me-2"></i>
            <span><%= t('app.name') %></span>
        </div>
        
        <!-- User Info -->
        <div class="text-center mb-4 p-3" style="background-color: rgba(255, 255, 255, 0.1); border-radius: 12px;">
            <div class="d-flex align-items-center">
                <div class="bg-white rounded-circle p-2 me-3">
                    <i class="fas fa-user-md text-primary"></i>
                </div>
                <div class="text-start">
                    <div class="fw-bold text-white"><%= user.username %></div>
                    <small class="text-white-50"><%= t('roles.' + user.role.toLowerCase()) %></small>
                </div>
            </div>
        </div>
        
        <!-- Navigation Menu -->
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="/dashboard">
                    <i class="fas fa-tachometer-alt me-2"></i>
                    <span><%= t('nav.dashboard') %></span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/patients">
                    <i class="fas fa-users me-2"></i>
                    <span><%= t('nav.patients') %></span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/appointments">
                    <i class="fas fa-calendar-alt me-2"></i>
                    <span><%= t('nav.appointments') %></span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/visits">
                    <i class="fas fa-notes-medical me-2"></i>
                    <span><%= t('nav.visits') %></span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/billing">
                    <i class="fas fa-file-invoice me-2"></i>
                    <span><%= t('nav.billing') %></span>
                </a>
            </li>
            <% if (user.role === 'ADMIN') { %>
            <li class="nav-item">
                <a class="nav-link" href="/admin/services">
                    <i class="fas fa-cog me-2"></i>
                    <span><%= t('nav.services') %></span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/users">
                    <i class="fas fa-users-cog me-2"></i>
                    <span><%= t('nav.users') %></span>
                </a>
            </li>
            <% } %>
            <li class="nav-item mt-3">
                <form action="/auth/logout" method="POST" class="d-inline">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="nav-link border-0 bg-transparent text-start w-100">
                        <i class="fas fa-sign-out-alt me-2"></i>
                        <span><%= t('nav.logout') %></span>
                    </button>
                </form>
            </li>
        </ul>
    </div>
</nav>

<!-- Main Content -->
<main class="main-content" id="mainContent">
    <!-- Header -->
    <div class="bg-white shadow-sm mb-4">
        <div class="container-fluid p-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h2 class="mb-0 fw-bold text-dark"><%= t('billing.title') %></h2>
                    <p class="text-muted mb-0"><%= t('billing.title') %></p>
                </div>
                <div class="col-md-6">
                    <div class="d-flex gap-2">
                        <a href="/billing/invoices/new" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>
                            <%= t('billing.create_invoice') %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle me-2"></i>
                <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- Filters -->
        <div class="card mb-4">
            <div class="card-body">
                <form method="GET" action="/billing" class="row g-3">
                    <div class="col-md-4">
                        <label for="status" class="form-label"><%= t('billing.status') %></label>
                        <select class="form-select" id="status" name="status">
                            <option value="">-- <%= t('actions.all') %> --</option>
                            <option value="UNPAID" <%= filters.status === 'UNPAID' ? 'selected' : '' %>>
                                <%= t('status.unpaid') %>
                            </option>
                            <option value="PARTIAL" <%= filters.status === 'PARTIAL' ? 'selected' : '' %>>
                                <%= t('status.partial') %>
                            </option>
                            <option value="PAID" <%= filters.status === 'PAID' ? 'selected' : '' %>>
                                <%= t('status.paid') %>
                            </option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="patient" class="form-label"><%= t('billing.patient') %></label>
                        <select class="form-select" id="patient" name="patient">
                            <option value="">-- <%= t('actions.all') %> --</option>
                            <% patients.forEach(patient => { %>
                                <option value="<%= patient.id %>" <%= filters.patient === patient.id ? 'selected' : '' %>>
                                    <%= patient.name %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-outline-primary me-2">
                            <i class="fas fa-filter me-1"></i>
                            <%= t('actions.filter') %>
                        </button>
                        <a href="/billing" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Invoices List -->
        <div class="row">
            <% if (invoices.length === 0) { %>
                <div class="col-12">
                    <div class="text-center py-5">
                        <i class="fas fa-file-invoice fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted"><%= t('billing.no_invoices_yet') %></h5>
                        <a href="/billing/invoices/new" class="btn btn-primary mt-3">
                            <i class="fas fa-plus me-1"></i>
                            <%= t('billing.create_invoice') %>
                        </a>
                    </div>
                </div>
            <% } else { %>
                <% invoices.forEach(invoice => { %>
                    <div class="col-lg-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h5 class="card-title mb-1">
                                            <i class="fas fa-file-invoice me-2 text-primary"></i>
                                            <%= t('billing.invoice') %> #<%= invoice.id.slice(-8) %>
                                        </h5>
                                        <small class="text-muted">
                                            <i class="fas fa-calendar me-1"></i>
                                            <%= new Date(invoice.issuedAt).toLocaleDateString(i18n.language) %>
                                        </small>
                                    </div>
                                    <div class="text-end">
                                        <% if (invoice.status === 'PAID') { %>
                                            <span class="badge bg-success"><%= t('status.paid') %></span>
                                        <% } else if (invoice.status === 'PARTIAL') { %>
                                            <span class="badge bg-warning"><%= t('status.partial') %></span>
                                        <% } else { %>
                                            <span class="badge bg-danger"><%= t('status.unpaid') %></span>
                                        <% } %>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <strong class="text-primary"><%= t('billing.patient') %>:</strong>
                                    <div><%= invoice.patient.name %></div>
                                    <small class="text-muted"><%= invoice.patient.phone %></small>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-6">
                                        <strong class="text-secondary"><%= t('billing.total') %>:</strong>
                                        <div class="fs-5 fw-bold text-primary">
                                            <%= invoice.total.toFixed(2) %> <%= t('currency') %>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <strong class="text-secondary"><%= t('billing.paid') %>:</strong>
                                        <div class="fs-6 fw-bold text-success">
                                            <%= invoice.payments.reduce((sum, payment) => sum + payment.amount, 0).toFixed(2) %> <%= t('currency') %>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <small class="text-muted">
                                        <strong><%= t('billing.services') %>:</strong>
                                        <% invoice.items.forEach((item, index) => { %>
                                            <%= i18n.language === 'ar' ? item.service.nameAr : item.service.nameEn %>
                                            <% if (item.qty > 1) { %>(x<%= item.qty %>)<% } %>
                                            <% if (index < invoice.items.length - 1) { %>, <% } %>
                                        <% }); %>
                                    </small>
                                </div>

                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <a href="/billing/invoices/<%= invoice.id %>" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye me-1"></i>
                                            <%= t('actions.view') %>
                                        </a>
                                        <% if (invoice.status !== 'PAID') { %>
                                        <button class="btn btn-outline-success btn-sm" 
                                                onclick="showPaymentModal('<%= invoice.id %>', <%= invoice.total %>, <%= invoice.payments.reduce((sum, payment) => sum + payment.amount, 0) %>)">
                                            <i class="fas fa-plus me-1"></i>
                                            <%= t('billing.add_payment') %>
                                        </button>
                                        <% } %>
                                    </div>
                                    <% if (invoice.status !== 'PAID') { %>
                                        <div class="text-end">
                                            <small class="text-danger">
                                                <strong><%= t('billing.remaining') %>:</strong>
                                                <%= (invoice.total - invoice.payments.reduce((sum, payment) => sum + payment.amount, 0)).toFixed(2) %> <%= t('currency') %>
                                            </small>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>

        <!-- Pagination -->
        <% if (pagination.total > 1) { %>
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <% if (pagination.hasPrev) { %>
                        <li class="page-item">
                            <a class="page-link" href="?page=<%= pagination.current - 1 %>&status=<%= filters.status || '' %>&patient=<%= filters.patient || '' %>">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>
                    <% } %>
                    
                    <% for (let i = Math.max(1, pagination.current - 2); i <= Math.min(pagination.total, pagination.current + 2); i++) { %>
                        <li class="page-item <%= i === pagination.current ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= i %>&status=<%= filters.status || '' %>&patient=<%= filters.patient || '' %>"><%= i %></a>
                        </li>
                    <% } %>
                    
                    <% if (pagination.hasNext) { %>
                        <li class="page-item">
                            <a class="page-link" href="?page=<%= pagination.current + 1 %>&status=<%= filters.status || '' %>&patient=<%= filters.patient || '' %>">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        <% } %>
    </div>
</main>

<!-- Payment Modal -->
<div class="modal fade" id="paymentModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><%= t('billing.add_payment') %></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="paymentForm">
                <div class="modal-body">
                    <input type="hidden" id="paymentInvoiceId" name="invoiceId">
                    
                    <div class="mb-3">
                        <label for="paymentAmount" class="form-label">
                            <%= t('billing.amount') %> <span class="text-danger">*</span>
                        </label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="paymentAmount" name="amount" 
                                   step="0.01" min="0.01" required>
                            <span class="input-group-text"><%= t('currency') %></span>
                        </div>
                        <small class="text-muted">
                            <span id="remainingAmount"></span>
                        </small>
                    </div>

                    <div class="mb-3">
                        <label for="paymentMethod" class="form-label">
                            <%= t('billing.method') %> <span class="text-danger">*</span>
                        </label>
                        <select class="form-select" id="paymentMethod" name="method" required>
                            <option value="CASH"><%= t('payment_methods.cash') %></option>
                            <option value="KNET"><%= t('payment_methods.knet') %></option>
                            <option value="CARD"><%= t('payment_methods.card') %></option>
                            <option value="OTHER"><%= t('payment_methods.other') %></option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="txnRef" class="form-label">
                            <%= t('billing.transaction_reference') %>
                        </label>
                        <input type="text" class="form-control" id="txnRef" name="txnRef" 
                               placeholder="<%= t('billing.transaction_reference_placeholder') %>">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <%= t('actions.cancel') %>
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>
                        <%= t('actions.save') %>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function showPaymentModal(invoiceId, total, paid) {
    document.getElementById('paymentInvoiceId').value = invoiceId;
    document.getElementById('paymentAmount').max = (total - paid).toFixed(2);
    document.getElementById('remainingAmount').textContent = 
        '<%= t("billing.remaining") %>: ' + (total - paid).toFixed(2) + ' <%= t("currency") %>';
    
    new bootstrap.Modal(document.getElementById('paymentModal')).show();
}

document.getElementById('paymentForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const data = Object.fromEntries(formData);
    
    fetch('/billing/payments', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
        },
        body: JSON.stringify(data)
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        } else {
            alert('<%= t("error.save_failed") %>');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('<%= t("error.network_error") %>');
    });
});
</script>
