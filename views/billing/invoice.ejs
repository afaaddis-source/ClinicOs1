<% layout('layout') %>

<!-- Language Toggle -->
<div class="position-fixed top-0 start-0 m-3" style="z-index: 1001;">
    <button class="btn btn-light btn-sm" onclick="toggleLanguage()">
        <i class="fas fa-globe me-1"></i>
        <span id="langText"><%= i18n.language === 'ar' ? 'EN' : 'عربي' %></span>
    </button>
</div>

<!-- Mobile Toggle -->
<button class="mobile-toggle" onclick="toggleSidebar()">
    <i class="fas fa-bars"></i>
</button>

<!-- Sidebar -->
<nav class="sidebar" id="sidebar">
    <div class="p-3">
        <div class="navbar-brand mb-4">
            <i class="fas fa-stethoscope me-2"></i>
            <span><%= t('app.name') %></span>
        </div>
        
        <!-- User Info -->
        <div class="text-center mb-4 p-3" style="background-color: rgba(255, 255, 255, 0.1); border-radius: 12px;">
            <div class="d-flex align-items-center">
                <div class="bg-white rounded-circle p-2 me-3">
                    <i class="fas fa-user-md text-primary"></i>
                </div>
                <div class="text-start">
                    <div class="fw-bold text-white"><%= user.username %></div>
                    <small class="text-white-50"><%= t('roles.' + user.role.toLowerCase()) %></small>
                </div>
            </div>
        </div>
        
        <!-- Navigation Menu -->
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="/dashboard">
                    <i class="fas fa-tachometer-alt me-2"></i>
                    <span><%= t('nav.dashboard') %></span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/patients">
                    <i class="fas fa-users me-2"></i>
                    <span><%= t('nav.patients') %></span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/appointments">
                    <i class="fas fa-calendar-alt me-2"></i>
                    <span><%= t('nav.appointments') %></span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/visits">
                    <i class="fas fa-notes-medical me-2"></i>
                    <span><%= t('nav.visits') %></span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/billing">
                    <i class="fas fa-file-invoice me-2"></i>
                    <span><%= t('nav.billing') %></span>
                </a>
            </li>
            <% if (user.role === 'ADMIN') { %>
            <li class="nav-item">
                <a class="nav-link" href="/admin/services">
                    <i class="fas fa-cog me-2"></i>
                    <span><%= t('nav.services') %></span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/users">
                    <i class="fas fa-users-cog me-2"></i>
                    <span><%= t('nav.users') %></span>
                </a>
            </li>
            <% } %>
            <li class="nav-item mt-3">
                <form action="/auth/logout" method="POST" class="d-inline">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="nav-link border-0 bg-transparent text-start w-100">
                        <i class="fas fa-sign-out-alt me-2"></i>
                        <span><%= t('nav.logout') %></span>
                    </button>
                </form>
            </li>
        </ul>
    </div>
</nav>

<!-- Main Content -->
<main class="main-content" id="mainContent">
    <!-- Header -->
    <div class="bg-white shadow-sm mb-4">
        <div class="container-fluid p-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h2 class="mb-0 fw-bold text-dark"><%= title %></h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="/billing"><%= t('nav.billing') %></a></li>
                            <li class="breadcrumb-item active"><%= t('billing.invoice') %> #<%= invoice.id.slice(-8) %></li>
                        </ol>
                    </nav>
                </div>
                <div class="col-md-6 text-end">
                    <button class="btn btn-outline-secondary me-2" onclick="window.print()">
                        <i class="fas fa-print me-1"></i>
                        <%= t('actions.print') %>
                    </button>
                    <% if (invoice.status !== 'PAID') { %>
                    <button class="btn btn-success" 
                            onclick="showPaymentModal('<%= invoice.id %>', <%= invoice.total %>, <%= invoice.payments.reduce((sum, payment) => sum + payment.amount, 0) %>)">
                        <i class="fas fa-plus me-1"></i>
                        <%= t('billing.add_payment') %>
                    </button>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle me-2"></i>
                <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <div class="row justify-content-center">
            <div class="col-lg-10">
                <!-- Invoice Card -->
                <div class="card" id="invoice-content">
                    <div class="card-body">
                        <!-- Invoice Header -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="d-flex align-items-center mb-3">
                                    <i class="fas fa-stethoscope fa-2x text-primary me-3"></i>
                                    <div>
                                        <h3 class="mb-0 fw-bold text-primary"><%= t('app.name') %></h3>
                                        <small class="text-muted"><%= t('app.description') %></small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 text-end">
                                <h4 class="mb-2">
                                    <%= t('billing.invoice') %> #<%= invoice.id.slice(-8) %>
                                </h4>
                                <p class="text-muted mb-0">
                                    <%= t('billing.issued_date') %>: <%= new Date(invoice.issuedAt).toLocaleDateString(i18n.language) %>
                                </p>
                                <% if (invoice.status === 'PAID') { %>
                                    <span class="badge bg-success mt-2"><%= t('status.paid') %></span>
                                <% } else if (invoice.status === 'PARTIAL') { %>
                                    <span class="badge bg-warning mt-2"><%= t('status.partial') %></span>
                                <% } else { %>
                                    <span class="badge bg-danger mt-2"><%= t('status.unpaid') %></span>
                                <% } %>
                            </div>
                        </div>

                        <!-- Patient Information -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h5 class="text-primary mb-2"><%= t('billing.bill_to') %></h5>
                                <div class="p-3" style="background-color: #f8f9fa; border-radius: 8px;">
                                    <strong><%= invoice.patient.name %></strong><br>
                                    <%= t('patients.civil_id') %>: <%= invoice.patient.civilId %><br>
                                    <%= t('patients.phone') %>: <%= invoice.patient.phone %><br>
                                    <% if (invoice.patient.dob) { %>
                                        <%= t('patients.dob') %>: <%= new Date(invoice.patient.dob).toLocaleDateString(i18n.language) %>
                                    <% } %>
                                </div>
                            </div>
                        </div>

                        <!-- Services Table -->
                        <div class="table-responsive mb-4">
                            <table class="table">
                                <thead class="table-light">
                                    <tr>
                                        <th><%= t('billing.service') %></th>
                                        <th class="text-center"><%= t('billing.quantity') %></th>
                                        <th class="text-end"><%= t('billing.unit_price') %></th>
                                        <th class="text-end"><%= t('billing.total') %></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% invoice.items.forEach(item => { %>
                                        <tr>
                                            <td>
                                                <strong><%= i18n.language === 'ar' ? item.service.nameAr : item.service.nameEn %></strong><br>
                                                <small class="text-muted"><%= item.service.code %></small>
                                            </td>
                                            <td class="text-center"><%= item.qty %></td>
                                            <td class="text-end"><%= item.price.toFixed(2) %> <%= t('currency') %></td>
                                            <td class="text-end">
                                                <strong><%= (item.qty * item.price).toFixed(2) %> <%= t('currency') %></strong>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>

                        <!-- Invoice Summary -->
                        <div class="row">
                            <div class="col-md-6 offset-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between mb-2">
                                            <span><%= t('billing.subtotal') %>:</span>
                                            <span><%= (invoice.total + invoice.discount - invoice.tax).toFixed(2) %> <%= t('currency') %></span>
                                        </div>
                                        <% if (invoice.discount > 0) { %>
                                            <div class="d-flex justify-content-between mb-2">
                                                <span class="text-success"><%= t('billing.discount') %>:</span>
                                                <span class="text-success">-<%= invoice.discount.toFixed(2) %> <%= t('currency') %></span>
                                            </div>
                                        <% } %>
                                        <% if (invoice.tax > 0) { %>
                                            <div class="d-flex justify-content-between mb-2">
                                                <span><%= t('billing.tax') %>:</span>
                                                <span>+<%= invoice.tax.toFixed(2) %> <%= t('currency') %></span>
                                            </div>
                                        <% } %>
                                        <hr>
                                        <div class="d-flex justify-content-between mb-3">
                                            <strong class="fs-5"><%= t('billing.total') %>:</strong>
                                            <strong class="fs-5 text-primary"><%= invoice.total.toFixed(2) %> <%= t('currency') %></strong>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <span class="text-success"><%= t('billing.paid') %>:</span>
                                            <span class="text-success">
                                                <%= invoice.payments.reduce((sum, payment) => sum + payment.amount, 0).toFixed(2) %> <%= t('currency') %>
                                            </span>
                                        </div>
                                        <% if (invoice.status !== 'PAID') { %>
                                            <div class="d-flex justify-content-between">
                                                <span class="text-danger"><%= t('billing.remaining') %>:</span>
                                                <span class="text-danger">
                                                    <%= (invoice.total - invoice.payments.reduce((sum, payment) => sum + payment.amount, 0)).toFixed(2) %> <%= t('currency') %>
                                                </span>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Payment History -->
                        <% if (invoice.payments.length > 0) { %>
                            <div class="mt-5">
                                <h5 class="text-primary mb-3"><%= t('billing.payment_history') %></h5>
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead class="table-light">
                                            <tr>
                                                <th><%= t('billing.date') %></th>
                                                <th><%= t('billing.amount') %></th>
                                                <th><%= t('billing.method') %></th>
                                                <th><%= t('billing.reference') %></th>
                                                <th><%= t('billing.processed_by') %></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% invoice.payments.forEach(payment => { %>
                                                <tr>
                                                    <td><%= new Date(payment.paidAt).toLocaleDateString(i18n.language) %></td>
                                                    <td><strong><%= payment.amount.toFixed(2) %> <%= t('currency') %></strong></td>
                                                    <td>
                                                        <span class="badge bg-info">
                                                            <%= t('payment_methods.' + payment.method.toLowerCase()) %>
                                                        </span>
                                                    </td>
                                                    <td><%= payment.txnRef || '-' %></td>
                                                    <td><%= payment.createdByUser.username %></td>
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        <% } %>

                        <!-- Footer -->
                        <div class="mt-5 pt-3 border-top text-center">
                            <small class="text-muted">
                                <%= t('billing.thank_you_message') %>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Payment Modal -->
<div class="modal fade" id="paymentModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><%= t('billing.add_payment') %></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="paymentForm">
                <div class="modal-body">
                    <input type="hidden" id="paymentInvoiceId" name="invoiceId">
                    
                    <div class="mb-3">
                        <label for="paymentAmount" class="form-label">
                            <%= t('billing.amount') %> <span class="text-danger">*</span>
                        </label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="paymentAmount" name="amount" 
                                   step="0.01" min="0.01" required>
                            <span class="input-group-text"><%= t('currency') %></span>
                        </div>
                        <small class="text-muted">
                            <span id="remainingAmount"></span>
                        </small>
                    </div>

                    <div class="mb-3">
                        <label for="paymentMethod" class="form-label">
                            <%= t('billing.method') %> <span class="text-danger">*</span>
                        </label>
                        <select class="form-select" id="paymentMethod" name="method" required>
                            <option value="CASH"><%= t('payment_methods.cash') %></option>
                            <option value="KNET"><%= t('payment_methods.knet') %></option>
                            <option value="CARD"><%= t('payment_methods.card') %></option>
                            <option value="OTHER"><%= t('payment_methods.other') %></option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="txnRef" class="form-label">
                            <%= t('billing.transaction_reference') %>
                        </label>
                        <input type="text" class="form-control" id="txnRef" name="txnRef" 
                               placeholder="<%= t('billing.transaction_reference_placeholder') %>">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <%= t('actions.cancel') %>
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>
                        <%= t('actions.save') %>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function showPaymentModal(invoiceId, total, paid) {
    document.getElementById('paymentInvoiceId').value = invoiceId;
    document.getElementById('paymentAmount').max = (total - paid).toFixed(2);
    document.getElementById('paymentAmount').value = (total - paid).toFixed(2);
    document.getElementById('remainingAmount').textContent = 
        '<%= t("billing.remaining") %>: ' + (total - paid).toFixed(2) + ' <%= t("currency") %>';
    
    new bootstrap.Modal(document.getElementById('paymentModal')).show();
}

document.getElementById('paymentForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const data = Object.fromEntries(formData);
    
    fetch('/billing/payments', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
        },
        body: JSON.stringify(data)
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        } else {
            alert('<%= t("error.save_failed") %>');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('<%= t("error.network_error") %>');
    });
});

// Print styles
const printStyles = `
    @media print {
        .sidebar, .mobile-toggle, .btn, .modal { display: none !important; }
        .main-content { margin: 0 !important; }
        #invoice-content { box-shadow: none !important; border: none !important; }
        .card { border: none !important; }
    }
`;
document.head.insertAdjacentHTML('beforeend', '<style>' + printStyles + '</style>');
</script>
